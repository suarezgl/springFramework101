<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<!--  Definiedno beans con valores por defecto
	   	  asignando agumentos por el constructor de la clase Persona -->
	<bean id="persona" class="com.spring.beans.Persona">
		<constructor-arg value="1"></constructor-arg>
		<constructor-arg value="Leonardo"></constructor-arg>
		<constructor-arg value="Enigma"></constructor-arg>		
	</bean>
</beans>
