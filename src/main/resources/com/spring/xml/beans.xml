<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	>
    <bean class="com.spring.beans.PostProcessorBean"></bean>
    <bean id="persona" class="com.spring.beans.Persona" autowire="byName" scope="prototype">
		<property name="nombre" value="Gringo Jose"></property>
		<property name="id" value="1"></property>
		<property name="apodo" value="Pancho Villa"></property>
	</bean>
	
	<!-- mismo nombre de la propeidad -->
	<bean id="pais" class="com.spring.beans.Pais">
		<property name="nombre" value="Peru"></property>
	</bean>
	<!-- Bean ciudad  -->
	<bean id="ciudad" class="com.spring.beans.Ciudad">
		<property name="nombre" value="Caracas"></property>
	</bean> 

	
</beans>
